{
  "name": "ts-fullstack-app",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@10.8.1",
  "scripts": {
    "dev": "turbo run dev"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "express": "^4.19.0",
    "typescript": ">=5.0.0",
    "react": "~18.3.0",
    "ts-node": "10.9.2"

  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["packages/shared/src/*"]
    }
  },
  "include": ["packages", "apps"]
}
